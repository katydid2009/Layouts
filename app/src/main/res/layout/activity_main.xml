<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kazmiller.tiger.layouts.MainActivity">


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/xianxingbuju"
        android:text="线性布局"/>

    <Button
        android:text="相对布局"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xianxingbuju"
        android:layout_alignStart="@+id/xianxingbuju"
        android:layout_marginTop="12dp"
        android:id="@+id/xiangduibuju" />

    <Button
        android:text="表格布局"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xiangduibuju"
        android:layout_alignStart="@+id/xiangduibuju"
        android:layout_marginTop="18dp"
        android:id="@+id/biaogebuju" />


</RelativeLayout>
